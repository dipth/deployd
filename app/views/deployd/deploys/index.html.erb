<h1>Recent deploys</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>When</th>
      <th>Revision</th>
      <th> </th>
    </tr>
  </thead>
  <tbody>
    <% @deploys.each_with_index do |deploy, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%=l deploy.time, :format => :long %></td>
        <td><%= deploy.revision %></td>
        <td><a class="btn btn-small btn-info" href="#"><i class="icon-info-sign icon-white"></i> Details</a></td>
      </tr>
    <% end %>
  </tbody>
</table>
